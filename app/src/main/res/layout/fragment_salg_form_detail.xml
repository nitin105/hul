<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.hul.salg.ui.formDetails.SalgFormDetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f9fa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="56dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:background="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:text="@string/wing_Name"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text='@{viewModel.visitData.visit_1.wing_number.value.toString()}'
                        android:textColor="#444050"
                        android:textFontWeight="700"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:text="@string/floor"
                        android:layout_marginTop="24dp"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text='@{viewModel.visitData.visit_1.floor.value.toString()}'
                        android:textColor="#444050"
                        android:textFontWeight="700"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:text="@string/flat_number"
                        android:layout_marginTop="24dp"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text='@{viewModel.visitData.visit_1.flatNumber.value.toString()}'
                        android:textColor="#444050"
                        android:textFontWeight="700"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:text="@string/response"
                        android:layout_marginTop="24dp"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text='@{viewModel.visitData.visit_1.response.value.toString()}'
                        android:textColor="#444050"
                        android:textFontWeight="700"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.responseVisibility2}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/public_sans"
                        android:text="@string/reason"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text='@{viewModel.visitData.visit_1.reason.value.toString()}'
                        android:textColor="#444050"
                        android:textFontWeight="700"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="@{viewModel.responseVisibility1}">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/public_sans"
                            android:text="@string/select_date_for_visit"
                            android:textColor="#6d6b77"
                            android:textFontWeight="400"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_sans"
                            android:lineHeight="20dp"
                            android:text='@{viewModel.visitData.visit_1.select_date_for_visit.value.toString()}'
                            android:textColor="#444050"
                            android:textFontWeight="700"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/public_sans"
                            android:text="@string/select_time_for_visit"
                            android:textColor="#6d6b77"
                            android:textFontWeight="400"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_sans"
                            android:lineHeight="20dp"
                            android:text='@{viewModel.visitData.visit_1.select_time_for_visit.value.toString()}'
                            android:textColor="#444050"
                            android:textFontWeight="700"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="@{viewModel.responseVisibility}">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/public_sans"
                            android:text="@string/who_did_you_speak_with"
                            android:textColor="#6d6b77"
                            android:textFontWeight="400"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_sans"
                            android:lineHeight="20dp"
                            android:text='@{viewModel.visitData.visit_1.whom_did_you_engage_with.value.toString()}'
                            android:textColor="#444050"
                            android:textFontWeight="700"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/public_sans"
                            android:text="@string/did_you_take_consent_for_their_participation"
                            android:textColor="#6d6b77"
                            android:textFontWeight="400"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_sans"
                            android:lineHeight="20dp"
                            android:text='@{viewModel.visitData.visit_1.was_consent_for_participation_taken.value.toString()}'
                            android:textColor="#444050"
                            android:textFontWeight="700"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="@{viewModel.participataionVisibility}">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:fontFamily="@font/public_sans"
                                android:text="@string/are_you_and_your_family_aware_of_waste_segregation"
                                android:textColor="#6d6b77"
                                android:textFontWeight="400"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/public_sans"
                                android:lineHeight="20dp"
                                android:text='@{viewModel.visitData.visit_1.is_waste_segregated_into_dry_and_wet_categories_in_your_household.value.toString()}'
                                android:textColor="#444050"
                                android:textFontWeight="700"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:fontFamily="@font/public_sans"
                                android:text="@string/how_many_categories_should_it"
                                android:textColor="#6d6b77"
                                android:textFontWeight="400"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/public_sans"
                                android:lineHeight="20dp"
                                android:text='@{viewModel.visitData.visit_1.in_your_experience_how_many_other_households_separate_waste_in_this_society_colony_lane.value.toString()}'
                                android:textColor="#444050"
                                android:textFontWeight="700"
                                android:textSize="15sp"
                                android:textStyle="bold" />

<!--                            <TextView-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_marginTop="24dp"-->
<!--                                android:fontFamily="@font/public_sans"-->
<!--                                android:text="@string/do_you_currently_segregate"-->
<!--                                android:textColor="#6d6b77"-->
<!--                                android:textFontWeight="400"-->
<!--                                android:textSize="13sp" />-->

<!--                            <TextView-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:fontFamily="@font/public_sans"-->
<!--                                android:lineHeight="20dp"-->
<!--                                android:text='@{viewModel.visitData.visit_1.do_you_currently_segregate_your_waste_before_disposing.value.toString()}'-->
<!--                                android:textColor="#444050"-->
<!--                                android:textFontWeight="700"-->
<!--                                android:textSize="15sp"-->
<!--                                android:textStyle="bold" />-->

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:fontFamily="@font/public_sans"
                                android:text="@string/how_does_the_society_housekeeping_staff"
                                android:textColor="#6d6b77"
                                android:textFontWeight="400"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/public_sans"
                                android:lineHeight="20dp"
                                android:text='@{viewModel.visitData.visit_1.how_does_the_society_housekeeping_staff_collect_the_waste_from_your_house.value.toString()}'
                                android:textColor="#444050"
                                android:textFontWeight="700"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:fontFamily="@font/public_sans"
                                android:text="@string/does_this_household_have_a_champion"
                                android:textColor="#6d6b77"
                                android:textFontWeight="400"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/public_sans"
                                android:lineHeight="20dp"
                                android:text='@{viewModel.visitData.visit_1.does_this_household_have_a_champion.value.toString()}'
                                android:textColor="#444050"
                                android:textFontWeight="700"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="@{viewModel.championVisibility}">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="24dp"
                                    android:fontFamily="@font/public_sans"
                                    android:text="@string/name"
                                    android:textColor="#6d6b77"
                                    android:textFontWeight="400"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/public_sans"
                                    android:lineHeight="20dp"
                                    android:text='@{viewModel.visitData.visit_1.if_yes_name_of_the_champion.value.toString()}'
                                    android:textColor="#444050"
                                    android:textFontWeight="700"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="24dp"
                                    android:fontFamily="@font/public_sans"
                                    android:text="@string/phone_number"
                                    android:textColor="#6d6b77"
                                    android:textFontWeight="400"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/public_sans"
                                    android:lineHeight="20dp"
                                    android:text='@{viewModel.visitData.visit_1.phone_number.value.toString()}'
                                    android:textColor="#444050"
                                    android:textFontWeight="700"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="24dp"
                                    android:fontFamily="@font/public_sans"
                                    android:text="@string/support_our_initiative"
                                    android:textColor="#6d6b77"
                                    android:textFontWeight="400"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/public_sans"
                                    android:lineHeight="20dp"
                                    android:text='@{viewModel.visitData.visit_1.would_you_like_to_support_our_initiative_by_spreading_the_awareness.value.toString()}'
                                    android:textColor="#444050"
                                    android:textFontWeight="700"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/public_sans"
                            android:text="@string/share_your_experience"
                            android:textColor="#6d6b77"
                            android:textFontWeight="400"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_sans"
                            android:lineHeight="20dp"
                            android:text='@{viewModel.visitData.visit_1.share_your_experience.value.toString()}'
                            android:textColor="#444050"
                            android:textFontWeight="700"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llImg1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img1"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/button_background_gray" />

                                <TextView
                                    android:id="@+id/img1Desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/public_sans"
                                    android:text="@string/picture_of_door"
                                    android:textColor="#6d6b77"
                                    android:textSize="@dimen/_8sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llImg2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:visibility="@{viewModel.responseVisibility}">

                                <ImageView
                                    android:id="@+id/img2"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/button_background_gray" />

                                <TextView
                                    android:id="@+id/img2Desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/public_sans"
                                    android:text="@string/conversation_image"
                                    android:textColor="#6d6b77"
                                    android:textSize="@dimen/_8sdp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>