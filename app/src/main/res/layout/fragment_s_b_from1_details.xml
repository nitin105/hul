<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.hul.sb.mobiliser.ui.sbform1details.SBFrom1DetailsViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f9fa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:paddingBottom="56dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:background="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text="@string/add_house_code"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text='@{viewModel.visitData.visit_1.house_code.value.toString()}'
                        android:textColor="#444050"
                        android:textFontWeight="700"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:layout_marginTop="24dp"
                        android:text="@string/customer_name"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text='@{viewModel.visitData.visit_1.customer_name.value.toString()}'
                        android:textColor="#444050"
                        android:textFontWeight="700"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:layout_marginTop="24dp"
                        android:text="@string/no_of_members_present_in_house"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text="@{Boolean.valueOf(viewModel.visitData.visit_1.no_of_members_present_in_house.value.toString()) ? `Yes` : `No`}"
                        android:textColor="#444050"
                        android:textFontWeight="700"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:layout_marginTop="24dp"
                        android:text="@string/is_there_a_toilet_inside"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text='@{viewModel.visitData.visit_1.is_there_a_toilet_inside.value.toString()}'
                        android:textColor="#444050"
                        android:textFontWeight="700"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="bottom"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:layout_marginTop="24dp"
                        android:text="@string/is_there_a_washing_machine_in_the_house"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text='@{viewModel.visitData.visit_1.is_there_a_washing_machine_in_the_house.value.toString()}'
                        android:textColor="#444050"
                        android:textFontWeight="700"
                        android:textSize="15sp"
                        
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:layout_marginTop="24dp"
                        android:text="@string/has_the_customer_visited_suvidha_centre"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text='@{viewModel.visitData.visit_1.has_the_customer_visited_suvidha_centre.value.toString()}'
                        android:textColor="#444050"
                        android:textFontWeight="700"
                        android:textSize="15sp"
                        
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:layout_marginTop="24dp"
                        android:text="@string/address"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text='@{viewModel.visitData.visit_1.enter_address.value.toString()}'
                        android:textColor="#444050"
                        android:textFontWeight="700"
                        android:textSize="15sp"
                        
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:layout_marginTop="24dp"
                        android:text="@string/customer_mobile_number"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text='@{viewModel.visitData.visit_1.customer_mobile_number.value.toString()}'
                        android:textColor="#444050"
                        android:textFontWeight="700"
                        android:textSize="15sp"
                        
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:layout_marginTop="24dp"
                        android:text="@string/lead_quality"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
