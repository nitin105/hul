                        android:layout_marginTop="24dp"
                        android:text="@string/captured_images"
                        android:textColor="#6d6b77"
                        android:textFontWeight="400"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="24dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llImg1"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:src="@drawable/button_background_gray"
                                    android:id="@+id/img1"
                                    android:scaleType="centerCrop"/>

                                <TextView
                                    android:id="@+id/img1Desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/public_sans"
                                    android:text="@string/selfie_image_outside_the_door_before_entering_the_house"
                                    android:textColor="#6d6b77"
                                    android:textSize="@dimen/_8sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llImg2"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:src="@drawable/button_background_gray"
                                    android:id="@+id/img2"
                                    android:scaleType="centerCrop"
                                    />

                                <TextView
                                    android:id="@+id/img2Desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/public_sans"
                                    android:text="@string/long_shot_of_mobiliser_showing_suvidha_photobook_in_the_household"
                                    android:textColor="#6d6b77"
                                    android:textSize="@dimen/_8sdp"
                                    android:layout_marginTop="@dimen/_5sdp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llImg3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                
                                android:layout_marginEnd="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:src="@drawable/button_background_gray"
                                    android:id="@+id/img3"
                                    android:scaleType="centerCrop"/>

                                <TextView
                                    android:id="@+id/img3Desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/public_sans"
                                    android:text="@string/long_shot_of_mobiliser_handing_over_laundry_discount_coupon"
                                    android:textColor="#6d6b77"
                                    android:textSize="@dimen/_8sdp"
                                    android:layout_marginTop="@dimen/_5sdp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llImg4"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                
                                android:layout_marginStart="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:src="@drawable/button_background_gray"
                                    android:id="@+id/img4"
                                    
                                    android:scaleType="centerCrop"
                                    />

                                <TextView
                                    android:id="@+id/img4Desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/public_sans"
                                    android:text="@string/selfie_image_of_communicator_image_with_the_house_code_sticker_on_door"
                                    android:textColor="#6d6b77"
                                    android:textSize="@dimen/_8sdp"
                                    
                                    android:layout_marginTop="@dimen/_5sdp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!--
                        <LinearLayout
                            android:id="@+id/llImg5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                
                                android:layout_marginEnd="@dimen/_10sdp">

                                <ImageView
