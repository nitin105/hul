<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/public_sans_bold"
        android:text="@string/mobiliser_name"
        android:textColor="#2F2B3D"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMobiliserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/public_sans_regular"
        android:text=""
        android:textColor="#2F2B3D"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/llLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingStart="0dp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_logout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/public_sans_medium"
            android:text="@string/logout"
            android:textColor="#2F2B3D"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
