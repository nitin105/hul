<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.hul.curriculam.ui.form3Details.Form3ViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f9fa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:paddingBottom="56dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:background="@color/white"
            app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="20dp"
                android:text="@string/disce_code"
                android:textColor="#6d6b77"
                android:textFontWeight="400"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/txtUdiceCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="20dp"
                android:textColor="#444050"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:layout_marginTop="24dp"
                android:text="@string/school_name"
                android:textColor="#6d6b77"
                android:textFontWeight="400"
                android:textSize="13sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="20dp"
                android:id="@+id/txtSchoolName"
                android:textColor="#444050"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNameOfSchoolRepresentative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="20dp"
                android:textColor="#444050"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:layout_marginTop="24dp"
                android:text="@string/form2"
                android:textColor="#6d6b77"
                android:textFontWeight="400"
                android:textSize="13sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="20dp"
                android:id="@+id/txtNumberOfSchoolRepresentative"
                android:textColor="#444050"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:layout_marginTop="24dp"
                android:text="@string/form6"
                android:textColor="#6d6b77"
                android:textFontWeight="400"
                android:textSize="13sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="20dp"
                android:id="@+id/txtCurriculamOnTrack"
                android:textColor="#444050"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:layout_marginTop="24dp"
                android:text="@string/remarks"
                android:textColor="#6d6b77"
                android:textFontWeight="400"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/public_sans"
                android:text="@string/form1"
                android:textColor="#6d6b77"
                android:textFontWeight="400"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="20dp"
                android:id="@+id/txtRemark"
                android:textColor="#444050"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:layout_marginTop="24dp"
                android:text="@string/captured_images"
                android:textColor="#6d6b77"
                android:textFontWeight="400"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llImg1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/button_background_gray"
                            android:id="@+id/img1"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:id="@+id/img1Desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_sans"
                            android:text="@string/visit_pic_1"
                            android:textColor="#6d6b77"
                            android:textSize="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_5sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llImg2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/button_background_gray"
                            android:id="@+id/img2"
                            android:scaleType="centerCrop"
                            />

                        <TextView
                            android:id="@+id/img2Desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_sans"
                            android:text="@string/visit_pic_2"
                            android:textColor="#6d6b77"
                            android:textSize="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_5sdp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llImg3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/button_background_gray"
                            android:id="@+id/img3"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:id="@+id/img3Desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_sans"
                            android:text="@string/visit_pic_5"
                            android:textColor="#6d6b77"
                            android:textSize="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_5sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llImg4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/button_background_gray"
                            android:id="@+id/img4"
                            android:scaleType="centerCrop"
                            />

                        <TextView
                            android:id="@+id/img4Desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_sans"
                            android:text="@string/auditor_visit_1_pic_2"
                            android:textColor="#6d6b77"
                            android:textSize="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_5sdp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>