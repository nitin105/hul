            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:background="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text="@string/flat_details"
                        android:textColor="#2F2B3D"
                        android:textFontWeight="400"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text="@string/wing_Name"
                        android:textColor="#2F2B3D"
                        android:textFontWeight="400"
                        android:layout_marginTop="16dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        app:boxStrokeErrorColor="@color/red"
                        app:error="@{viewModel.wingNumberError}"
                        app:errorEnabled="true"
                        app:errorIconTint="@color/red"
                        app:errorTextColor="@color/red"
                        app:layout_constraintTop_toBottomOf="@+id/loginHeader"
                        app:placeholderText="@string/enter_here"
                        app:prefixTextColor="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:lineHeight="18dp"
                            android:text="@={viewModel.wingNumber}"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="16sp" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text="@string/floor"

                        android:textColor="#2F2B3D"
                        android:textFontWeight="400"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        app:boxStrokeErrorColor="@color/red"
                        app:error="@{viewModel.floorError}"
                        app:errorEnabled="true"
                        app:errorIconTint="@color/red"
                        app:errorTextColor="@color/red"
                        app:layout_constraintTop_toBottomOf="@+id/loginHeader"
                        app:placeholderText="@string/enter_here"
                        app:prefixTextColor="@color/black">

                        <AutoCompleteTextView
                            android:id="@+id/floor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:text="@={viewModel.floor}"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="16sp" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text="@string/flat_number"
                        android:textColor="#2F2B3D"
                        android:textFontWeight="400"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        app:boxStrokeErrorColor="@color/red"
                        app:error="@{viewModel.flatNumberError}"
                        app:errorEnabled="true"
                        app:errorIconTint="@color/red"
                        app:errorTextColor="@color/red"
                        app:layout_constraintTop_toBottomOf="@+id/loginHeader"
                        app:placeholderText="@string/enter_here"
                        app:prefixTextColor="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:lineHeight="18dp"
                            android:text="@={viewModel.flatNumber}"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="16sp" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:text="@string/response"
                        android:textColor="#2F2B3D"
                        android:textFontWeight="400"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        app:boxStrokeErrorColor="@color/red"
                        app:error="@{viewModel.responseModelError}"
                        app:errorEnabled="true"
                        app:errorIconTint="@color/red"
                        app:errorTextColor="@color/red"
                        app:layout_constraintTop_toBottomOf="@+id/loginHeader"
                        app:placeholderText="@string/enter_here"
                        app:prefixTextColor="@color/black">

                        <AutoCompleteTextView
                            android:id="@+id/response"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:text="@={viewModel.responseModel}"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="16sp" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:visibility="@{viewModel.responseVisibility}">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_sans"
                            android:lineHeight="20dp"
                            android:text="@string/select_date_for_visit"
                            android:textColor="#2F2B3D"
                            android:textFontWeight="400"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout

                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_sans"
                            app:boxStrokeErrorColor="@color/red"
                            app:endIconDrawable="@drawable/calendar"
                            app:error="@{viewModel.flatNumberError}"
                            app:endIconMode="custom"
                            app:errorEnabled="true"
                            app:errorIconTint="@color/red"
                            app:errorTextColor="@color/red"
                            app:layout_constraintTop_toBottomOf="@+id/loginHeader"
                            app:placeholderText="@string/enter_here"
                            app:prefixTextColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="false"
                                android:inputType="number"
                                android:lineHeight="18dp"
                                android:text="@={viewModel.date}"
                                android:textColor="@color/black"
                                android:textFontWeight="400"
                                android:textSize="16sp" />


                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_sans"
                            android:lineHeight="20dp"
                            android:text="@string/select_time_for_visit"
                            android:textColor="#2F2B3D"
                            android:textFontWeight="400"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout

                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_sans"
                            app:boxStrokeErrorColor="@color/red"
                            app:endIconDrawable="@drawable/clock"
                            app:error="@{viewModel.flatNumberError}"
                            app:errorEnabled="true"
                            app:errorIconTint="@color/red"
                            app:errorTextColor="@color/red"
                            app:endIconMode="custom"
                            app:layout_constraintTop_toBottomOf="@+id/loginHeader"
                            app:placeholderText="@string/enter_here"
                            app:prefixTextColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/clock"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="false"
                                android:inputType="number"
                                android:lineHeight="18dp"
                                android:text="@={viewModel.time}"
                                android:textColor="@color/black"
                                android:textFontWeight="400"
                                android:textSize="16sp" />


                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        android:lineHeight="20dp"
                        android:visibility="@{viewModel.responseVisibility1}"
                        android:text="@string/reason"
                        android:textColor="#2F2B3D"
                        android:textFontWeight="400"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans"
                        app:boxStrokeErrorColor="@color/red"
                        android:visibility="@{viewModel.responseVisibility1}"
                        app:error="@{viewModel.flatNumberError}"
                        app:errorEnabled="true"
                        app:errorIconTint="@color/red"
                        app:errorTextColor="@color/red"
                        app:layout_constraintTop_toBottomOf="@+id/loginHeader"
                        app:placeholderText="@string/enter_here"
                        app:prefixTextColor="@color/black">

                        <AutoCompleteTextView
                            android:id="@+id/reason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:text="@={viewModel.anotherFlatNumber}"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="16sp" />

<!--                        <com.google.android.material.textfield.TextInputEditText-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:inputType="number"-->
<!--                            android:lineHeight="18dp"-->
<!--                            android:text="@={viewModel.anotherFlatNumber}"-->
<!--                            android:textColor="@color/black"-->
<!--                            android:textFontWeight="400"-->
<!--                            android:textSize="16sp" />-->


                    </com.google.android.material.textfield.TextInputLayout>



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/team_selfie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/public_sans"
                            android:lineHeight="20dp"
                            android:text="@string/upload_picture_of_door"
                            android:textColor="#6d6b77"
                            android:textFontWeight="400"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/capture1"
                            app:layout_constraintLeft_toLeftOf="@id/actions1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/actions1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:visibility="@{viewModel.captured1Visibility}">

                            <ImageView
                                android:id="@+id/view1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/view" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/circlecheck" />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/capture1"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:background="#dde0f6"
                            android:fontFamily="@font/publicsans"
                            android:paddingHorizontal="20dp"
                            android:text="@string/capture"
                            android:textAllCaps="false"
                            android:textColor="@color/purple_500"
                            android:textFontWeight="700"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:visibility="@{viewModel.capture1Visibility}"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/proceed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/button_background_blue"
                        android:fontFamily="@font/publicsans"
                        android:text="@string/submit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>